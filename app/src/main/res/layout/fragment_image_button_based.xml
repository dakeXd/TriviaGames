<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="391dp"
    android:layout_height="369dp"
    tools:context=".fragments.ImageButtonBasedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:background="@drawable/border_inverted"
            android:contentDescription="@string/image_example"
            android:cropToPadding="false"
            android:padding="4dp"
            android:rotationX="-4"
            android:rotationY="4"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/group3"
            app:layout_constraintEnd_toEndOf="@+id/group3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/biomutant_foto" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:background="@drawable/border_inverted"
            android:contentDescription="@string/image_example"
            android:cropToPadding="false"
            android:padding="4dp"
            android:rotationX="-4"
            android:rotationY="2"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/group3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/group3"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/bomberman_logo" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:background="@drawable/border_inverted"
            android:contentDescription="@string/image_example"
            android:cropToPadding="false"
            android:padding="4dp"
            android:rotationX="4"
            android:rotationY="-4"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/group3"
            app:layout_constraintTop_toTopOf="@+id/group3"
            tools:src="@drawable/kazuya_foto" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:background="@drawable/border_inverted"
            android:contentDescription="@string/image_example"
            android:cropToPadding="false"
            android:padding="4dp"
            android:rotationX="4"
            android:rotationY="4"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/group3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/group3"
            tools:src="@drawable/deadoralive6_foto" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>