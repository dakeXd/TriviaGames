<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RadioButtonBasedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="391dp"
        android:layout_height="369dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/p5hatty"
            android:minHeight="48dp"
            android:rotationX="12"
            android:rotationY="12"
            android:text="@string/txt_botton_responder"
            android:textSize="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="390dp"
            android:layout_height="276dp"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioButton3"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:fontFamily="@font/p5hatty"
                android:rotationX="-4"
                android:rotationY="-4"
                android:text="Respuesta 1"
                android:textAlignment="textStart"
                android:textColor="?android:textColorPrimary"
                android:textSize="22dp" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:fontFamily="@font/p5hatty"
                android:layoutDirection="rtl"
                android:rotationX="4"
                android:rotationY="4"
                android:text="Respuesta 2"
                android:textAlignment="textEnd"
                android:textColor="?android:textColorPrimary"
                android:textSize="22dp" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:fontFamily="@font/p5hatty"
                android:text="Respuesta 3"
                android:textColor="?android:textColorPrimary"
                android:textSize="22dp" />

            <RadioButton
                android:id="@+id/radioButton7"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:fontFamily="@font/p5hatty"
                android:layoutDirection="rtl"
                android:rotationX="4"
                android:rotationY="4"
                android:text="Respuesta 4"
                android:textAlignment="textEnd"
                android:textColor="?android:textColorPrimary"
                android:textSize="22dp" />

        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>